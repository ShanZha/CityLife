<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/margin_10" >

    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱/手机号" />

    <EditText
        android:id="@+id/login_et_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_et_username"
        android:layout_marginTop="@dimen/margin_20"
        android:hint="请输入密码" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_et_pswd"
        android:layout_marginTop="@dimen/margin_20"
        android:text="登录" />

    <!-- 第三方登录 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_login"
        android:layout_marginTop="@dimen/margin_20" >

        <!-- 新浪微博 -->

        <com.weibo.sdk.view.LoginButton
            android:id="@+id/login_btn_sina_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪微博登录" >
        </com.weibo.sdk.view.LoginButton>

        <Button
            android:id="@+id/login_btn_oauth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBtnOauth"
            android:text="先鉴权"
            android:visibility="gone" />

        <Button
            android:id="@+id/login_btn_sina_weibo_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSinaWeiboShare"
            android:text="新浪微博分享" >
        </Button>
    </LinearLayout>

</RelativeLayout>