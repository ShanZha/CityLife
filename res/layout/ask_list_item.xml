<com.fourkkm.citylife.itemview.ModoerAskItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_10" >

    <!-- 类型 -->

    <TextView
        android:id="@+id/ask_list_item_tv_category"
        style="@style/list_first_level_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:singleLine="true" />

    <!-- 主题 -->

    <TextView
        android:id="@+id/ask_list_item_tv_subject"
        style="@style/list_first_level_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ask_list_item_iv_more"
        android:layout_toRightOf="@+id/ask_list_item_tv_category"
        android:singleLine="true" />

    <!-- 更多图标 -->

    <ImageView
        android:id="@+id/ask_list_item_iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:src="@drawable/main_more" />

</com.fourkkm.citylife.itemview.ModoerAskItemView>