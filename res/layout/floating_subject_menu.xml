<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/floating_bg"
    android:baselineAligned="false" >

    <ListView
        android:id="@+id/floating_subject_menu_listview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/floating_list_bg_gray"
        android:cacheColorHint="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <ListView
        android:id="@+id/floating_subject_menu_listview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/floating_list_bg_white"
        android:cacheColorHint="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <ListView
        android:id="@+id/floating_subject_menu_listview_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/floating_list_bg_gray"
        android:cacheColorHint="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>