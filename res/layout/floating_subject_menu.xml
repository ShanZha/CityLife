<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" >

    <ListView
        android:id="@+id/floating_subject_menu_listview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent" >
    </ListView>

    <ListView
        android:id="@+id/floating_subject_menu_listview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#333fff"
        android:cacheColorHint="@android:color/transparent" >
    </ListView>

    <ListView
        android:id="@+id/floating_subject_menu_listview_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ff33ee"
        android:cacheColorHint="@android:color/transparent" >
    </ListView>

</LinearLayout>